<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Khung_hinhdsnl"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview_avata_dsnl"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Img_avata_hinhdsnl"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-5dp"
            app:layout_constraintCircleRadius="25dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Txt_ten_hinhdsnl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="#009688"
        app:layout_constraintStart_toEndOf="@+id/Cardview_avata_dsnl"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Txt_dangcap_hinhdsnl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/Cardview_avata_dsnl"
        app:layout_constraintTop_toBottomOf="@+id/Txt_ten_hinhdsnl" />

    <TextView
        android:id="@+id/Txt_loinhan_dsnl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Cardview_avata_dsnl"
        app:layout_constraintTop_toBottomOf="@+id/Txt_dangcap_hinhdsnl" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#0F00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txt_loinhan_dsnl" />


</androidx.constraintlayout.widget.ConstraintLayout>