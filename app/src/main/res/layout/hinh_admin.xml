<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Txt_ten_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Txt_ngaysua_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ngày"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txt_ten_admin" />

    <TextView
        android:id="@+id/Txt_gioithieu_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Giới thiệu"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txt_ngaysua_admin" />

    <TextView
        android:id="@+id/line_admin"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#ff00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txt_gioithieu_admin" />
</androidx.constraintlayout.widget.ConstraintLayout>