<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ho_so">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/Banner_hoso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_tieude_hoso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/anhnen_hoso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Btn_quaylai_hoso"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_quaylai"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tieudetrang_hoso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="THÔNG TIN CÁ NHÂN"
            android:textColor="#0289F4"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Btn_quaylai_hoso"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layouttren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_tieude_hoso">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ten_hoso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="Tên"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/Img_sao_hoso"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_sao1"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/ten_hoso"/>

        <TextView
            android:id="@+id/dangcap_hoso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="Đẳng cấp"
            android:textColor="#FB602F"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/Img_sao_hoso" />

        <LinearLayout
            android:id="@+id/phanguitinnhanvathich_hoso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/dangcap_hoso">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/guitinnhan_hoso"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:background="@drawable/iconmail" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Nhắn tin"
                    android:textColor="#016E64"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/thich_hoso"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:background="@drawable/icon_like" />

                <TextView
                    android:id="@+id/tieudethich_hoso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Thích"
                    android:textColor="#016E64"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Linear_anhbimat_hoso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Btn_bimat_hoso"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:background="@drawable/icon_bimat" />

                <TextView
                    android:id="@+id/Txt_bimat_hoso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Ảnh bí mật"
                    android:textColor="#016E64"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/Txt_sothoivang_hoso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đang có 0 thỏi vàng"
        android:layout_margin="10dp"
        android:padding="3dp"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:textColor="#00BCD4"
        android:background="#DCFAF5D7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layouttren"/>

    <LinearLayout
        android:id="@+id/Linear_phanthongtinvang_hoso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCE2F5F8"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txt_sothoivang_hoso">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3_hoso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Linear_phanthongtinvang_hoso">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:padding="5dp"
            android:layout_weight="5"
            android:background="#DCE2F5F8">

            <ImageView
                android:id="@+id/Img_icontuoi_hoso"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/t_dau"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tieudetuoi_hoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#016E64"
                android:text="Tuổi: "
                app:layout_constraintStart_toEndOf="@+id/Img_icontuoi_hoso"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tuoi_hoso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#016E64"
                android:text="00"
                app:layout_constraintStart_toEndOf="@+id/tieudetuoi_hoso"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/camtinh_hoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#016E64"
                android:text="Cầm tinh con gà"
                app:layout_constraintStart_toEndOf="@+id/Img_icontuoi_hoso"
                app:layout_constraintTop_toBottomOf="@+id/tieudetuoi_hoso"/>

            <TextView
                android:id="@+id/tieugioitinh_hoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#016E64"
                android:textStyle="bold"
                android:text="Giới tính: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Img_icontuoi_hoso"/>

            <TextView
                android:id="@+id/gioitinh_hoso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#016E64"
                android:text="Nam"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tieugioitinh_hoso"
                app:layout_constraintTop_toTopOf="@+id/tieugioitinh_hoso"/>

            <TextView
                android:id="@+id/tieudenoio_hoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#016E64"
                android:text="Nơi ở: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gioitinh_hoso"/>

            <TextView
                android:id="@+id/noio_hoso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#016E64"
                android:text="nơi ở"
                app:layout_constraintStart_toEndOf="@+id/tieudenoio_hoso"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tieudenoio_hoso"/>

            <TextView
                android:id="@+id/tieudehocvan_hoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#016E64"
                android:layout_marginTop="5dp"
                android:text="Học vấn: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noio_hoso"/>

            <TextView
                android:id="@+id/hocvan_hoso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#016E64"
                android:text="học vấn"
                app:layout_constraintStart_toEndOf="@+id/tieudehocvan_hoso"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tieudehocvan_hoso"/>

            <TextView
                android:id="@+id/tieudenguoicauhon_hoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#016E64"
                android:textStyle="bold"
                android:text="Số người thích: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hocvan_hoso"/>

            <TextView
                android:id="@+id/Txt_songuoicauhon_hoso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#016E64"
                android:text="0"
                app:layout_constraintStart_toEndOf="@+id/tieudenguoicauhon_hoso"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tieudenguoicauhon_hoso"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="5"
            android:background="#DCE2F5F8">


            <TextView
                android:id="@+id/tieudenghenghiep_hoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#016E64"
                android:textStyle="bold"
                android:text="Nghề nghiệp: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/nghenghiep_hoso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#016E64"
                android:text="nghề nghiệp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tieudenghenghiep_hoso"/>

            <TextView
                android:id="@+id/tieudehonnhan_hoso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#016E64"
                android:text="Tình trạng hôn nhân: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nghenghiep_hoso"/>

            <TextView
                android:id="@+id/tinhtranghonnhan_hoso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Độc thân"
                android:textColor="#016E64"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tieudehonnhan_hoso"/>

            <TextView
                android:id="@+id/tieudemucdich_hoso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#016E64"
                android:text="Mục đích tham gia: "
                app:layout_constraintTop_toBottomOf="@+id/tinhtranghonnhan_hoso"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/mucdich_hoso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tìm bạn"
                android:textColor="#016E64"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tieudemucdich_hoso"/>

            <TextView
                android:id="@+id/tieudengaythamgia_hoso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#016E64"
                android:text="Ngày tham gia: "
                app:layout_constraintTop_toBottomOf="@+id/mucdich_hoso"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/ngaythamgia_hoso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="00/00/2020"
                android:gravity="center"
                android:textColor="#016E64"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tieudengaythamgia_hoso"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textviewgioithieu_hoso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tự giới thiệu"
        android:textColor="#016E64"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:background="#DCE2F5F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3_hoso" />

    <ScrollView
        android:id="@+id/gioithieucuon_hoso"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Banner_hoso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewgioithieu_hoso">

        <TextView
            android:id="@+id/gioithieubanthan_hoso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="#016E64"
            android:textStyle="italic" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>