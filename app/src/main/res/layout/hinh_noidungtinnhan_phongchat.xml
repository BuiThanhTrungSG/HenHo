<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview_anh_phongchat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        android:foregroundGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Img_anhdaidien_phongchat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-4dp"
            android:layout_marginLeft="-4dp"
            app:layout_constraintCircleRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Txt_ten_phongchat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#0492A5"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Cardview_anh_phongchat"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/Txt_dangcap_phongchat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="#4CAF50"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Cardview_anh_phongchat"
        app:layout_constraintTop_toBottomOf="@+id/Txt_ten_phongchat"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview_phongchat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="8"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Cardview_anh_phongchat"
        app:layout_constraintTop_toBottomOf="@+id/Txt_dangcap_phongchat">

        <TextView
            android:id="@+id/Txt_noidungtinnhan_phongchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F2F3"
            android:textColor="#009688"
            android:padding="2dp"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>