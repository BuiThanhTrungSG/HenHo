<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hop_tuoi">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/Banner_hoptuoi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Constran_tuoiminh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@drawable/thietke_vien"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Img_tuoi_hoptuoi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/t_mao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Txt_bansinhnam_hoptuoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn sinh năm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Img_tuoi_hoptuoi"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Txt_nam_hoptuoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1987"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Img_tuoi_hoptuoi"
            app:layout_constraintTop_toBottomOf="@+id/Txt_bansinhnam_hoptuoi"/>

        <TextView
            android:id="@+id/Txt_camtinh_hoptuoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cầm tinh con Mèo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Img_tuoi_hoptuoi"
            app:layout_constraintTop_toBottomOf="@+id/Txt_nam_hoptuoi"/>

        <TextView
            android:id="@+id/Txt_tuoi_hoptuoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuổi Mão"
            android:textStyle="bold"
            android:textColor="#009688"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Img_tuoi_hoptuoi"
            app:layout_constraintTop_toBottomOf="@+id/Txt_camtinh_hoptuoi"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Contran_giua_hoptuoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Constran_tuoiminh">

        <ImageView
            android:id="@+id/Img_tuoihop1_hoptuoi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:src="@drawable/t_hoi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Txt_tuoihop1_hoptuoi"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Tuổi Hợi"
            android:textStyle="bold"
            android:textColor="#009688"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Img_tuoihop1_hoptuoi"/>

        <TextView
            android:id="@+id/Txt_hopvoituoi_hoptuoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/thietke_vien"
            android:text="HỢP VỚI"
            android:textStyle="bold"
            android:textColor="#FD679A"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Img_tuoihop1_hoptuoi"/>

        <ImageView
            android:id="@+id/Img_tuoihop2_hoptuoi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:src="@drawable/t_mui"
            app:layout_constraintStart_toEndOf="@id/Txt_hopvoituoi_hoptuoi"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Txt_tuoihop2_hoptuoi"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Tuổi Mùi"
            android:textStyle="bold"
            android:textColor="#009688"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/Txt_hopvoituoi_hoptuoi"
            app:layout_constraintTop_toBottomOf="@+id/Img_tuoihop2_hoptuoi"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recyc_danhsach_hoptuoi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/thietke_edittext"
        app:layout_constraintBottom_toTopOf="@+id/Banner_hoptuoi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Contran_giua_hoptuoi" />

    <Button
        android:id="@+id/Btn_quaylai_hoptuoi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_quaylai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>