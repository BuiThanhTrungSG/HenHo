<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ho_so_hen_gap">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/Banner_hshg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Banner_hshg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_tieude_hshg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/anhnen_nhantin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/Btn_quaylai_hshg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_quaylai"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tieudetrang_hshg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="NHẬN LỜI MỜI"
                    android:textColor="#ffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/Btn_quaylai_hshg"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/Img_hinh_hshg"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:clickable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_tieude_hshg"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/Btn_xemhoso_hshg"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="Xem hồ sơ"
                android:textColor="#00BCD4"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Img_hinh_hshg"
                app:strokeColor="#8F01B3A2"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/Txt_hengi_hshg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Hẹn gì?"
                android:textColor="#016E64"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Txt_moigi_hshg"
                app:layout_constraintTop_toBottomOf="@+id/Txt_tennguoimoi_hshg" />

            <TextView
                android:id="@+id/Txt_mucdich_hshg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mục đích"
                android:textColor="#016E64"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Txt_2_hshg"
                app:layout_constraintTop_toBottomOf="@+id/Txt_hengi_hshg" />

            <TextView
                android:id="@+id/Txt_sotien_hshg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Số tiền"
                android:textColor="#016E64"
                app:layout_constraintStart_toEndOf="@+id/Txt_3_hshg"
                app:layout_constraintTop_toBottomOf="@+id/Txt_mucdich_hshg" />

            <TextView
                android:id="@+id/Txt_nguoitratien_hshg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Người trả tiền"
                android:textColor="#016E64"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Txt_4_hshg"
                app:layout_constraintTop_toBottomOf="@+id/Txt_mucdich_hshg" />

            <TextView
                android:id="@+id/Txt_diadiem_hshg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Địa điểm mời"
                android:textColor="#016E64"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Txt_5_hshg"
                app:layout_constraintTop_toBottomOf="@+id/Txt_4_hshg" />

            <TextView
                android:id="@+id/Txt_tennguoimoi_hshg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tên"
                android:textColor="#016E64"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Btn_xemhoso_hshg" />

            <TextView
                android:id="@+id/Txt_moigi_hshg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Mời đi: "
                android:textColor="#016E64"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Txt_tennguoimoi_hshg" />

            <TextView
                android:id="@+id/Txt_2_hshg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Để: "
                android:textColor="#016E64"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Txt_hengi_hshg" />

            <TextView
                android:id="@+id/Txt_3_hshg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Với chi phí: "
                android:textColor="#016E64"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Txt_mucdich_hshg" />

            <TextView
                android:id="@+id/Txt_4_hshg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" do "
                android:textColor="#016E64"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/Txt_sotien_hshg"
                app:layout_constraintTop_toBottomOf="@+id/Txt_2_hshg" />

            <TextView
                android:id="@+id/Txt_5_hshg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Tại: "
                android:textColor="#016E64"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Txt_4_hshg" />

            <Button
                android:id="@+id/Btn_nhanloi_hshg"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Nhận lời mời"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.519"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Edt_loinhan_hshg" />

            <EditText
                android:id="@+id/Edt_loinhan_hshg"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/thietke_edittext"
                android:ems="10"
                android:gravity="top"
                android:hint="Nhập lời nhắn cho người mời"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:padding="5dp"
                android:textColorHint="#5BFF009F"
                android:textSize="13sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Txt_diadiem_hshg" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>