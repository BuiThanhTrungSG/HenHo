<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Constran_nendanhsach_quanhday"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="3dp"
    android:background="#F5FBFBEC"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/Cardview_avata_quanhday"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Img_avata_quanhday"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-5dp"
            app:layout_constraintCircleRadius="25dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Txt_ten_quanhday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="#0492A5"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cardview_avata_quanhday" />

    <TextView
        android:id="@+id/Txt_khoangcach_quanhday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txt_ten_quanhday" />


</androidx.constraintlayout.widget.ConstraintLayout>